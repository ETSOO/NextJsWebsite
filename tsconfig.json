{
    "compilerOptions": {
        /* Visit https://aka.ms/tsconfig.json to read more about this file */
        "target": "ES2019",
        "module": "ESNext",
        "allowJs": true,
        "moduleResolution": "node",
        "isolatedModules": true,
        "resolveJsonModule": true,
        "outDir": "./lib",
        "noEmit": false,
        "declaration": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "jsx": "react",
        "forceConsistentCasingInFileNames": true,
        "typeRoots": [
            "./node_modules/@etsoo/weixin/types",
            "./node_modules/@types"
        ]
    },
    "include": ["src"]
}
